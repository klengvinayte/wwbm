<% if @answer_is_correct && !@game.finished? %>
<%# If the game is not over yet (the correct answer to the last question was given), %>
<%# then we need to refresh the screen a little: %>
<%# display a new question, change the current prize and hide the old hints %>

$('.game-question').html("<%= escape_javascript (
      render partial: 'game_question', object: @game_question
    ) %>");

current_prize = $('.game-prizes').find('.active').toggleClass('active');
current_prize.prev().toggleClass('active');

$('.game-help-info').hide();
<% else %>
<%# If the game is over, stupidly redirect to the profile using js %>

window.location.href = '<%= user_path(current_user) %>';
<% end %>
