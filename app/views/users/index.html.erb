<h1 class="text-light">Rating</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="users-table table bg-white p-2 text-dark bg-opacity-50">
      <thead>
      <tr>
        <th class="text-center">Position</th>
        <th class="text-center">Name</th>
        <th class="text-center">Prize</th>
        <th class="text-center">Games</th>
        <th class="text-center">Per game</th>
      </tr>
      </thead>
      <%# For each user, we display information about his winnings, a link to his profile, and so on %>
      <% @users.each_with_index do |user, index| %>
        <tr class="text-center">
          <td><%= index + 1 %></td>
          <td><%= link_to user.name, user_path(user), class: "text-dark" %></td>
          <td><%= number_to_currency user.balance %></td>
          <td><%= user.games.count %></td>
          <td><%= user.average_prize %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
