<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div>
      <h1 class="text-light"><%= @user.name %></h1>
      <%= link_to 'Change your username and password', edit_user_registration_path(@user) if @user == current_user %>
    </div>
    <table class="users-table table bg-white p-2 text-dark bg-opacity-50 mt-3">
      <thead>
      <tr>
        <th class="text-center">#</th>
        <th></th>
        <th class="text-center">Дата</th>
        <th class="text-center">Вопрос</th>
        <th class="text-center">Выигрыш</th>
        <th class="text-center">Подсказки</th>
      </tr>
      </thead>
      <%# We display a list of the user's games using our partial users/_game %>
      <%= render partial: 'game', collection: @games %>
    </table>
  </div>
</div>
