<div class="bg-white p-2 text-dark bg-opacity-50 rounded" >
  <h2 class="mt-3"><%= t(".editing") %><%= @user.name %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }, html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field col-sm-5">
      <%= f.label "email", class: "mb-1" %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field col-sm-5 my-3">
      <%= f.label "password", class: "mb-1" %> <i><small><%= t(".note1") %></small></i>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>

        <em><small><%= @minimum_password_length %><%= t(".note2") %></small></em>
      <% end %>
    </div>

    <div class="field col-sm-5 my-3">
      <%= f.label "password_confirmation", class: "mb-1" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="field col-sm-5 my-3">
      <%= f.label "current_password" %>
      <i class="mb-1"><small><%= t(".note3") %></small></i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="actions my-3">
      <%= f.submit ".save", class: "btn btn-sm btn-primary" %>
    </div>
  <% end %>

  <h4><%= t(".delete_user") %></h4>
  <p><%= t(".note4") %></p>
  <div class="my-2"> <%= button_to t(".delete_user"), registration_path(resource_name),
                                   data: { turbo_confirm: t('alert.notice') }, method: :delete, class: "btn btn-sm btn-warning" %>
  </div>

  <div class="mb-2">
    <%= link_to t(".back"), :back %>
  </div>


</div>